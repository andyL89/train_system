<h1><%= @city.name %></h1>

<form action="/operator/<%= @operator.id %>/cities/<%= @city.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <div class="form-group">
    <label for="name">Edit City Name</label>
    <input id="name" name="name" type="text" value="<%= @city.name %>">
  </div>

  <div class="form-group">
    <button type="submit">Update</button>
  </div>
</form>

<form action="/operator/<%= @operator.id %>/cities/<%= @city.id %>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="delete">
    <button type="submit">Delete city</button>
  </div>
</form>

<p><a href="/operator/<%= @operator.id %>/cities">Return to city list</a></p>