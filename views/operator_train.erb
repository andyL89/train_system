<h1><%= @train.name %></h1>

<form action="/operator/<%= @operator.id %>/trains/<%= @train.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <div class="form-group">
    <label for="name">Edit train Name</label>
    <input id="name" name="name" type="text" value="<%= @train.name %>">
  </div>

  <div class="form-group">
    <button type="submit">Update</button>
  </div>
</form>

<form action="/operator/<%= @operator.id %>/trains/<%= @train.id %>" method="post">
  <div class="form-group">
    <input name="_method" type="hidden" value="delete">
    <button type="submit">Delete train</button>
  </div>
</form>

<p><a href="/operator/<%= @operator.id %>/trains">Return to train list</a></p>